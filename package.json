{
  "name": "local-server",
  "version": "1.0.0",
  "description": "local server",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/andrasat/local-server",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "dev": "tsc-watch -p ./tsconfig.json --onSuccess \"node build/main/index.js\"",
    "dev:docker": "docker-compose up",
    "docker:build": "docker build . -t localhost:53456/local-service:1",
    "docker:push": "docker push localhost:53456/local-service:1",
    "kind:load": "kind load docker-image localhost:53456/local-service:1 --name local",
    "deploy": "run-s build docker:build docker:push kind:load",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "base-microservice-core": "file:/home/andras/base/base-microservice-core"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  }
}